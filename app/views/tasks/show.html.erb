<h1><%= @task.title %></h1>

<ul>
  <li><%= @task.details %></li>
  <li>Completed: <%= @task.completed ? '✓' : '✗' %></li>
</ul>


<%= link_to 'Go Back', index_path, class: 'button' %>
<%= link_to 'Edit', edit_path(@task), class: 'button' %>
<%= link_to 'Delete', destroy_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure? Please confirm to delete."}, class: 'button' %>
